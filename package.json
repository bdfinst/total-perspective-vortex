{
  "name": "value-stream-map",
  "version": "1.0.0",
  "description": "A tool for value stream mapping a process flow",
  "keywords": [
    "lean",
    "devops",
    "vsm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bdfinst/value-stream-map"
  },
  "scripts": {
    "build": "next build && next export",
    "depcheck": "depcheck --ignores='import-sort-style-absolute'",
    "dev": "rm -rf .next && next dev",
    "format:check": "prettier --list-different './src/**/*.js*' './src/**/*.css'",
    "format:fix": "prettier --write './src/**/*.js*' './src/**/*.css'",
    "lint": "npm run format:fix && npm run lint:fix",
    "lint:check": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "start": "next start",
    "test": "jest --collectCoverage",
    "test:ci": "jest  --watch",
    "test:ci-debug": "jest --detectOpenHandles --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run depcheck && npm run lint && git add . && npm run lint:check && npm run format:check && npm test"
    }
  },
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "dagre": "^0.8.5",
    "export-from-json": "^1.3.4",
    "local-storage": "^2.0.0",
    "material-ui-dropzone": "^3.5.0",
    "next": "10.0.6",
    "npm": "^7.5.4",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-flow-renderer": "^8.7.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^9.5.0",
    "@testing-library/react-hooks": "^5.0.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "depcheck": "^1.3.1",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.0",
    "identity-obj-proxy": "^3.0.0",
    "import-sort-style-absolute": "^1.0.1",
    "jest": "^26.6.3",
    "object-key-validator": "^1.1.2",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.12.0"
  },
  "importSort": {
    ".js, .jsx, .es6, .es": {
      "parser": "babylon",
      "style": "absolute"
    }
  }
}
